rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null;
    }

    match /caregiver_profiles/{caregiverProfileId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Allow anonymous users to apply
    }
    match /appointments/{appointmentId} {
      allow read, update, delete: if isAdmin();
      allow create: if request.auth != null; // Allow anonymous users to schedule
    }
    match /interviews/{interviewId} {
      allow read, create, update: if isAdmin();
    }
    match /caregiver_employees/{employeeId} {
      allow read, create, update: if isAdmin();
    }
    match /settings/availability {
      allow read, write: if isAdmin();
    }
  }
}
