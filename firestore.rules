
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read/write to these specific collections.
    // This is a more secure starting point than allowing access to everything.
    match /caregiver_profiles/{profileId} {
      // Allow anonymous users (applicants) to create their profile.
      allow create: if request.auth.token.firebase.sign_in_provider == 'anonymous';
      // Allow authenticated admins to read and update.
      allow read, update: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    match /appointments/{appointmentId} {
       // Allow anonymous users to create appointments.
      allow create: if request.auth.token.firebase.sign_in_provider == 'anonymous';
       // Allow admins to manage appointments.
      allow read, update, delete: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    match /interviews/{interviewId} {
      // Only admins can manage interviews.
      allow read, create, update, delete: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    match /caregiver_employees/{employeeId} {
       // Only admins can manage employee records.
      allow read, create, update, delete: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    match /clients/{clientId} {
       // Only admins can manage clients.
      allow read, create, update, delete: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
    
    match /settings/{settingId} {
       // Only admins can manage settings.
      allow read, write: if request.auth.uid != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
  }
}
